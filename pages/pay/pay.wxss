/* pages/pay/pay.wxss */
.pay {
  position: fixed;
  display: inline-block;
  width: 100%;
  height: 100%;
  background: #909399;
}

.container1 {
  position: relative;
  top: 0%;
  height: 120rpx;
  width: 100%;
  text-align: center;
  line-height: 120rpx;
  color: #fff;
}

.container2 {
  position: relative;
  display: inline-block;
  height: calc(100% - 100rpx);
  width: 92%;
  padding-left: 8%;
  background: #fff;
  border-radius: 35rpx;
}
.container2 .title {
  display: inline-block;
  width: 100%;
  margin-top: 100rpx;
  font-size: 55rpx;
}
.container2 .tips {
  display: inline-block;
  width: 100%;
  margin-top: 30rpx;
  font-size: 35rpx;
  color: #909399;
}
.container2 .button_group {
  display: inline-block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;  
  margin-top: 80rpx;
}
.container2 .button_group .pay {
  display: inline-block;
  width: 82%; 
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  border-radius: 50rpx;
  border: 2rpx solid #909399;
  background-color: #909399;
  color: #ffffff;
}
.container2 .button_group .pay_hover {
  background-color: #ffffff;
  color: #909399;
}