/* pages/balance/balance.wxss */
.balanceView {
  position: absolute;
  display: inline-block;
  margin-left: 80rpx;
  padding-top: 100rpx;
  width: 100%;
  height: 22%;
  border-bottom: 1rpx solid #E7E7EB;
}
.balanceView .title {
  font-size: 55rpx;
}
.balanceView .text {
  padding-top: 5rpx;
  color: #707880;
}

.payView {
  position: absolute;
  display: inline-block;
  top: 30%;
  margin-left: 80rpx;
  width: calc(100% - 80rpx);
  height: 70%;
}
.payView .title {
  font-size: 40rpx;
  padding-top: 100rpx;
}
.payView .content {
  padding-right: 80rpx;
}
.active {
  display: inline-block;
  width: 40%;
  margin-left: 7%;
  margin-top: 20rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  background: #707880;  
  color: #ffffff;
  border: 1rpx solid #707880;
  border-radius: 15rpx;
}
.normal {
  display: inline-block;
  width: 40%;
  margin-left: 7%;
  margin-top: 30rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  border: 1rpx solid #707880;
  border-radius: 15rpx;
}

.buttonView {
  margin-top: 100rpx;
  margin-right: 80rpx;
}
.pay {
  width: 100%;
  background-color: #707880;
  color: #ffffff;
  border-radius: 50rpx;
  border: 2rpx solid #707880;
}
.pay_hover {
  background-color: #ffffff;
  color: #707880;
  border: 2rpx solid #707880;
}